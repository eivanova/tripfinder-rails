<div class="container row col-md-4 col-md-offset-4">

  <div class="page-header">
    <h1>Find my trip!</h1>
  </div>

  <form class="form-horizontal" accept-charset="UTF-8" action="finder/find" method="post">
    <div class="form-group">
      <label for="days_num" class="col-sm-4 control-label">Number of days:</label>
      <div class="col-sm-8">
        <input name="days" type="number" class="form-control" id="days_num" min="1" max="20" placeholder="How long is your vacation?">
      </div>
    </div>
    <div class="form-group">
      <label for="avg_hours" class="col-sm-4 control-label">Hours per day:</label>
      <div class="col-sm-8">
        <input name="hours" type="number" class="form-control" id="avg_hours" min="1" max="20" placeholder="Be brave!">
      </div>
    </div>
    <div class="form-group">
      <label for="cyclic" class="col-sm-4 control-label">Cyclic route:</label>
      <div class="col-sm-8">
        <input name="cyclic" id="cyclic" class="form-control" checked type="checkbox">
      </div>
    </div>
    <div class="form-group">
      <label for="destination" class="col-sm-4 control-label">Destination:</label>
      <div class="col-sm-8">
        <input name="location" type="text" class="form-control" id="destination" placeholder="Do you have one?">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <button type="submit" class="btn btn-default">Find</button>
      </div>
    </div>
  </form>

</div>
