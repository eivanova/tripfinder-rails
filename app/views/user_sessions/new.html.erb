<div class="container row">
  <div class="col-md-6 col-md-offset-5 centered">
    <div class="page-header">
      <h1><%= t '.login' %></h1>
    </div>

    <%= form_tag user_sessions_path, :method => :post do %>
      <div class="form-group">
        <label for="email"><%= t '.email' %></label>
        <input name="email" type="email" class="form-control" id="email" placeholder="<%= t '.login' %>">
      </div>
      <div class="form-group">
        <label for="password"><%= t '.password' %></label>
        <input name="password" type="password" class="form-control" id="password" placeholder="<%= t '.password' %>">
      </div>
      <button type="submit" class="btn btn-default"><%= t '.login' %></button>

      <%= link_to t('.register'), new_user_path, class: "btn btn-default" %>
    <% end %>

  </div>
</div>
