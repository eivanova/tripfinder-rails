<div class="container row">
  <ul class="list-group col-md-4">
    <li class="list-group-item disabled">
      Groups
      <%= link_to raw("<span class=\"glyphicon glyphicon-plus\"></span> "), new_group_path, :remote=>true, class: "pull-right" %>
    </li>
    <% @groups.each do |group| %>
      <li class="list-group-item">
        <%= link_to group.name, 'groups/' + group.id.to_s + '/routes', :remote=>true %>
        <div class="dropdown pull-right">
          <a class="btn btn-link dropdown-toggle" type="button" id="group-actions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" aria-labelledby="group-actions">
            <li><%= link_to "Simillar", 'groups/' + group.id.to_s + '/similar', :remote=>true %></li>
            <li><%= link_to "Edit", edit_group_path(group), :remote=>true%></li>
            <li><%= link_to "Delete", 'groups/' + group.id.to_s, :method=>:delete, :remote=>true %></li>
          </ul>
        </div>
      </li>
    <% end %>
  </ul>

  <div id="routes-per-group" class="col-md-8"></div>

</div>
