<div class="container row">
  <div class="col-md-6 col-md-offset-5 centered">
    <div class="page-header">
      <% if current_user %>
        <h1><%= t '.details' %></h1>
      <% else %>
        <h1><%= t '.register' %></h1>
      <% end %>
    </div>

    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div class="panel panel-danger">
          <div class="panel-heading">
            <%= t '.error' %>
          </div>
          <div class="panel-body">
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <label for="user_email"><%= t '.email' %></label>
        <input value="<%= @user.email %>" name="user[email]" type="email" class="form-control" id="user_email" placeholder="<%= t '.email' %>">
      </div>
      <div class="form-group">
        <label for="user_password"><%= t '.password' %></label>
        <input value="<%= @user.password %>" name="user[password]" type="password" class="form-control" id="user_password" placeholder="<%= t '.password' %>">
      </div>
      <div class="form-group">
        <label for="user_password_confirmation"><%= t '.confirm' %></label>
        <input name="user[password_confirmation]" type="password" class="form-control" id="user_password_confirmation" placeholder="<%= t '.confitm' %>">
      </div>
      <button type="submit" class="btn btn-default">
        <%= current_user ? t('.update') : t('.register') %>
      </button>

      <% if not current_user %>
        <%= link_to t('.login'), login_path, class: "btn btn-default" %>
      <% end %>
    <% end %>

  </div>
</div>

